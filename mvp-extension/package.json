{
    "name": "mvp-copilot-extension",
    "displayName": "MVP Copilot",
    "description": "VS Code extension for MVP Copilot Local RAG",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mvpCopilot.ask",
                "title": "MVP Copilot: Ask"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "mvp-copilot-sidebar",
                    "title": "MVP Copilot",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "views": {
            "mvp-copilot-sidebar": [
                {
                    "type": "webview",
                    "id": "mvpCopilot.sidebar",
                    "name": "Chat"
                }
            ]
        },
        "configuration": {
            "title": "MVP Copilot",
            "properties": {
                "mvpCopilot.defaultModel": {
                    "type": "string",
                    "default": "openrouter",
                    "enum": [
                        "local",
                        "openrouter"
                    ],
                    "description": "Default model mode for MVP Copilot"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    },
    "dependencies": {
        "node-fetch": "^2.6.11"
    }
}